<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.devMode" value="true" />
    <constant name="struts.custom.i18n.resources" value="global"/>

    <package name="evoting" namespace="/" extends="struts-default">
        <action name="index">
            <result>/index.jsp</result>
        </action>

        <action name="loginInput" class ="actions.RegisterAction" method="input">
            <result name="input">/login.jsp</result>
        </action>

        <action name="registerInput" class ="actions.RegisterAction" method="input">
            <result name="input">/register.jsp</result>
        </action>

        <action name="login" class="actions.LoginAction" method="execute">
            <result name="success">/dashboard.jsp</result>
        </action>

        <action name="register" class="actions.RegisterAction" method="execute">
            <result name="success">/thankyou.jsp</result>
            <result name="input">/register.jsp</result>
        </action>
    </package>
</struts>